{% extends 'base.html.twig' %}

{% block title %}
    Łyżwiarstwo figurowe ~Soliści~
{% endblock %}

{% block body %}
    <div class="all">
        <div class="container header">
            <div class="row logo">
                <p class="slogan">
                    <a href="{{ url('main_index') }}" title="Łyżwiarstwo figurowe">
                        Łyżwiarstwo figurowe
                    </a>
                </p>
                <p class="extra">~Soliści~</p>
            </div>
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="container-fluid">
                            <!-- przycisk rozwijania mobilnego menu -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Rozwiń nawigację</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!-- Grupowanie elementów menu w celu lepszego wyświetlania na urządzeniach moblinych -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li><a href="{{ url('rules_index') }}" title="zasady">
                                            Zasady
                                        </a></li>
                                    <li><a href="{{ url('video_index') }}" title="występy">
                                            Występy
                                        </a></li>
                                    <li><a href="#">Rankingi</a></li>
                                    <li><a href="{{ url('skater_index') }}" title="występy">
                                            Łyżwiarze
                                        </a></li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="row log-in">
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="admin">
                                <a class="AdminPanel" href="{{ url('user_index') }}" title="{{ 'label.admin'|trans }}">
                                    {{ 'label.admin'|trans }}
                                </a>
                            </div>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a  class="aLogIn" href="{{ url('auth_logout') }}" title="{{ 'auth.logout.label'|trans }}">
                                {{ 'auth.logout.label'|trans }}
                            </a>
                            <p class="imie">
                                {{ 'hello'|trans }}
                                <a href="{{ url('user_panel', {'id': user_id}) }}" title="{{ 'label.panel'|trans }}">
                                    {{ app.user.username }}
                                </a>
                                ,
                            </p>
                        {% else %}
                            <a class="aLogIn" href="{{ url('auth_login') }}" title="{{ 'auth.login.label'|trans }}">
                                {{ 'auth.login.label'|trans }}
                            </a>
                            <a class="aLogIn" href="{{ url('auth_signup') }}" title="{{ 'auth.signup.label'|trans }}">
                                {{ 'auth.signup.label'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid rules">
            <div class="row rule">
                <div class="shadow-rules">
                    <div class="title">
                        Występy
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="message">
                    {% include 'default/_flash_messages.html.twig' %}
                </div>

                <div class="col-md-3 col-sm-3 col-xs-12 filtr">
                    {% if is_granted('ROLE_ADMIN')%}
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="video_add">
                                <a href="{{ url('video_add') }}" title="{{ 'add_video'|trans }}">
                                    {{ 'add_video'|trans }}
                                </a>
                            </div>
                        </div>
                    {% endif %}
                    <form>
                        <div class="row">
                            <p class="title">Filtrowanie</p>

                            {{ form_start(form, { method: 'GET', action: url('matching_video_paginated') }) }}

                            <div class="radio2">
                                <p class="title mini">{{ form_label(form.championship) }}</p>
                                {{ form_widget(form.championship) }}
                            </div>

                            <div class="radio2">
                                <p class="title mini">{{ form_label(form.year) }}</p>
                                {{ form_widget(form.year) }}
                            </div>

                            <div class="radio2">
                                <p class="title mini">{{ form_label(form.skater) }}</p>
                                {{ form_widget(form.skater) }}
