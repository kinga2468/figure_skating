{% extends 'base.html.twig' %}

{% block title %}
    Łyżwiarstwo figurowe ~Soliści~
{% endblock %}

{% block body %}
    <div class="all">
        <div class="container header">
            <div class="row logo">
                <p class="slogan">
                    <a href="{{ url('main_index') }}" title="Łyżwiarstwo figurowe">
                        Łyżwiarstwo figurowe
                    </a>
                </p>
                <p class="extra">~Soliści~</p>
            </div>
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="container-fluid">
                            <!-- przycisk rozwijania mobilnego menu -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Rozwiń nawigację</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!-- Grupowanie elementów menu w celu lepszego wyświetlania na urządzeniach moblinych -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li><a href="{{ url('rules_index') }}" title="zasady">
                                            Zasady
                                        </a></li>
                                    <li><a href="{{ url('video_index') }}" title="występy">
                                            Występy
                                        </a></li>
                                    <li><a href="#">Rankingi</a></li>
                                    <li><a href="{{ url('skater_index') }}" title="występy">
                                            Łyżwiarze
                                        </a></li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="row log-in">
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="admin">
                                <a class="AdminPanel" href="{{ url('user_index') }}" title="{{ 'label.admin'|trans }}">
                                    {{ 'label.admin'|trans }}
                                </a>
                            </div>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a  class="aLogIn" href="{{ url('auth_logout') }}" title="{{ 'auth.logout.label'|trans }}">
                                {{ 'auth.logout.label'|trans }}
                            </a>
                            <p class="imie">
                                {{ 'hello'|trans }}
                                <a href="{{ url('user_panel', {'id': user_id}) }}" title="{{ 'label.panel'|trans }}">
                                    {{ app.user.username }}
                                </a>
                                ,
                            </p>
                        {% else %}
                            <a class="aLogIn" href="{{ url('auth_login') }}" title="{{ 'auth.login.label'|trans }}">
                                {{ 'auth.login.label'|trans }}
                            </a>
                            <a class="aLogIn" href="{{ url('auth_signup') }}" title="{{ 'auth.signup.label'|trans }}">
                                {{ 'auth.signup.label'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid rules">
            <div class="row rule">
                <div class="shadow-rules">
                    <div class="title">
                        Łyżwiarze
                    </div>
                </div>
            </div>

            <div class="container"> <!--tu można dodać main żeby był większy bottom margin -->
                <div class="message">
                    {% include 'default/_flash_messages.html.twig' %}
                </div>
                <div class="row">
                    {% if is_granted('ROLE_ADMIN')%}
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="skater_add">
                                <a href="{{ url('skater_add') }}" title="{{ 'skater_add'|trans }}">
                                    {{ 'skater_add'|trans }}
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                {#<div class="main">#}
                    <div class="skater_all">
                        {% if paginator.data|length %}
                            {% for row in paginator.data %}
                                <a href="{{ url('skater_view', {'id': row.id}) }}" title="{{ 'label.view2'|trans }}">
                                    <div class="skater_one">
                                        <div class="photo">
                                            <img src="{{ row.img }} " />
                                            {% if is_granted('ROLE_ADMIN')%}
                                                <div class="icons">
                                                    <a class="icon cog" href="{{ url('skater_edit', {'id': row.id}) }}" title="{{ 'edit'|trans }}">
                                                        <span class="fa fa-cog"></span>
                                                    </a>
                                                    <a class="icon trash" href="{{ url('skater_delete', {'id': row.id}) }}" title="{{ 'edit'|trans }}">
                                                        <span class="fa fa-trash"></span>
                                                    </a>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <p>{{ row.name|upper }} </p>
                                    </div>
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>
                {#</div>#}
            </div>
            <div class="container paginator">
                {% include 'default/_paginator.html.twig' with {
                    paginator: paginator,
                    route_name: 'skater_index',
                } %}
            </div>
        </div>
        <div class="container-fluid">
            <div class="row footer">
                EPI praca licencjacka 2018. Projekt i realizacja: Kinga Bożęcka.
            </div>
        </div>
    </div>
{% endblock %}