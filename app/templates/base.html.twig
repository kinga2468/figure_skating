        });
        $(document).ready(function() {
            $('#media2').carousel({
                pause: true,
                interval: false
            });
        });
        $(document).ready(function() {
            $('#media').carousel('pause');
        });
    </script>
    <script>
        var counterDate = new Date("Oct 20, 2018 09:01:00").getTime();

        var x = setInterval(function() {

            var currentTime = new Date().getTime();

            var difference = counterDate - currentTime;

            var day = Math.floor(difference / (1000 * 3600 * 24));
            var hour = Math.floor((difference % (1000 * 3600 * 24)) / (1000 * 3600));
            var minute = Math.floor((difference % (1000 * 3600)) / (1000 * 60));

            document.getElementById("day").innerHTML = day;
            document.getElementById("hour").innerHTML = hour;
            document.getElementById("minute").innerHTML = minute;

        }, 1000);
    </script>
